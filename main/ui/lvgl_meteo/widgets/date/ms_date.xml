<widget>
    <previews>
        <preview width="92" height="60" style_bg_color="0x000"/>
    </previews>
    <api>
        <prop name="date" default="Понеділок 30 12 2025">
            <param name="week_day" type="string"/>
            <param name="date" type="int"/>
            <param name="month" type="int"/>
            <param name="year" type="int"/>
        </prop>
    </api>
    <styles>
        <style name="date_label" text_font="weather_label_font" text_color="0xdddddd"
            width="100%" text_align="center" pad_ver="-1"/>
        <style name="view_style" bg_opa="0" border_width="0" width="92" height="60" pad_all="0" pad_row="0"/>
    </styles>
    <view styles="view_style" flex_flow="column" scrollable="false">
        <lv_label name="day_of_week_label" text="Понеділок" styles="date_label" style_margin_top="8"></lv_label>
        <lv_label name="date_label" text="30.12.2025" styles="date_label"></lv_label>
    </view>
</widget>
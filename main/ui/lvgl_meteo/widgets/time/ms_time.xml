<widget>
    <previews>
        <preview width="225" height="60" style_bg_color="0x000"/>
    </previews>
    <api>
        <prop name="time" default="0 0 0">
            <param name="hours" type="int"/>
            <param name="minutes" type="int"/>
            <param name="seconds" type="int"/>
        </prop>
    </api>
    <styles>
        <style name="time_label_style" text_font="time_label_font" 
            text_color="0xdddddd" width="100%" height="60" text_align="center" pad_top="8"/>
        <style name="view_style" bg_opa="0" border_width="0" width="225" height="60"
            pad_all="0"/>
    </styles>
    <view styles="view_style" scrollable="false">
        <lv_label name="time_label" text="00:00:00" styles="time_label_style"></lv_label>
    </view>
</widget>